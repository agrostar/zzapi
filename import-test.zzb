common:
  baseUrl: https://www.postman-echo.com

requests:
  simple get:
    method: GET
    url: /get
    headers:
      Custom-Header: Custom Value
      Content-Type: application/json
    params:
      param1: value
      aparam:
        - value1
        - value2


  SAMPLE-GET:
    method: GET
    url: https://www.postman-echo.com/get
    headers:
      X-Custom-Header: Custom Value
    params:
      foo1: bar1
      foo2: bar2
    options:
      # By default, the response headers are not displayed
      showHeaders: true
    tests:
      status: 200
      # Performs the following assertsions if the response is JSON
      $.args.foo1: bar1
      $.args.foo2: bar2
    capture:
      # Captures the value of the field args.foo1 into the variable called sampleVar
      sampleVar: $.args.foo1
